<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="Порт:"
        android:textColor="#6750A3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <EditText
        android:id="@+id/ip_plain_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="107"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <EditText
        android:id="@+id/ip_plain_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@id/ip_plain_2"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="192"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="."
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/ip_plain_3" />

    <EditText
        android:id="@+id/ip_plain_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@id/ip_plain_3"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="168"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/textView2" />

    <Button
        android:id="@+id/set_start_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_settings_24"
        android:importantForAccessibility="noHideDescendants"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="IP-адрес: "
        android:textColor="#6750A3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-14dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="."
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="."
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/ip_plain_2" />

    <EditText
        android:id="@+id/ip_plain_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@id/ip_plain_4"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        app:layout_constraintGuide_begin="178dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="Пароль:"
        android:textColor="#6750A3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/port_plain" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        app:layout_constraintGuide_begin="62dp" />

    <EditText
        android:id="@+id/password_plain"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-142dp"
        android:ems="10"
        android:hint="по умолчанию: 0000"
        android:inputType="text"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/port_plain"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-142dp"
        android:ems="10"
        android:hint="по умолчанию: 8888"
        android:inputType="text"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="8888"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        app:barrierDirection="left"
        app:constraint_referenced_ids="guideline5" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-75dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        android:text="Подключиться"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/password_plain" />

    <TextView
        android:id="@+id/debug_text"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="-150dp"
        android:layout_marginBottom="56dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

</androidx.constraintlayout.widget.ConstraintLayout>